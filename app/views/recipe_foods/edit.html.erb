<div class='container text-center'>
  <div class='col-7 col-lg-5 col-xl-4 col-xxl-4 mx-auto'>
    <h1>Modify Ingredient</h1>

    <%= bootstrap_form_with model: [@recipe, @recipe_food] do |form| %>
      <% if @recipe_food.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

          <ul>
            <% @recipe_food.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.number_field :quantity, autofocus: true, min: 0 %>
      
      <%= form.submit "Save Ingredient", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
