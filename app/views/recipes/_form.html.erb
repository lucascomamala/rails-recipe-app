<%= bootstrap_form_with(model: recipe) do |form| %>
  <%= form.alert_message "Please fix the errors below.", error_summary: false %>

  <%= form.text_field :name, autofocus: true, label_as_placeholder: true %>
  <%= form.number_field :preparation_time, label_as_placeholder: true %>
  <%= form.number_field :cooking_time, label_as_placeholder: true %>
  <%= form.text_area :description, label_as_placeholder: true %>


    <%= form.check_box :public, label_class: "ms-1", wrapper: { class: 'd-flex justify-content-center'} %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
