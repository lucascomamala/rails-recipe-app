<div class='col-10 col-sm-8 col-md-6 mx-auto'>
<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.text_field :name, autofocus: true, label_as_placeholder: true %>
  <%= f.email_field :email, autocomplete: "email", label_as_placeholder: true %>
  <%= f.password_field :password, autocomplete: "new-password", label_as_placeholder: true, help: "Must be at least 6 characters long" %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", label_as_placeholder: true %>
  <%= f.submit "Sign up" %>

<% end %>

<%= render "devise/shared/links" %>
</div>
