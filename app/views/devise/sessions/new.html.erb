<div class='col-10 col-sm-8 col-md-6 mx-auto'>
<h2>Log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", label_as_placeholder: true %>
  <%= f.password_field :password, autocomplete: "current-password", label_as_placeholder: true %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <%= f.submit "Log in" %>

<% end %>

<%= render "devise/shared/links" %>
</div>
